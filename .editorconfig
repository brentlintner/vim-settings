root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.vim]
indent_style = space
indent_size = 2

[*.lua]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[*.{js,coffee,ts}]
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.slim]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 2
